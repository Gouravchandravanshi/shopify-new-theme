{% style %}
  .hello-world{
      background-color:{{ section.settings.bg_color }};
  }
{% endstyle %}

<h1 class="hello-world" style="color: {{ section.settings.font_color }}">{{ section.settings.title }}</h1>
<h6>{{ section.blocks.title }}</h6>

{% schema %}
{
  "name": "new World",
  "class": "new-section-hello-world",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Hello World",
      "info": "this is hellow world info"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "font_color",
      "label": "Font Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "hello world"
    }
  ],
  "blocks": [
    {
    "type":"title",
    "name":"Title",
    "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Hello World",
      "info": "this is hellow world info"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "font_color",
      "label": "Font Color",
      "default": "#ffffff"
    }
  ]
    }
  ]
}
{% endschema %}
